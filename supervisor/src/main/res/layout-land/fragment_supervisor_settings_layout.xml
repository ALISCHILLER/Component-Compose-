<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/padding_default"
        android:layout_marginRight="@dimen/padding_default"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pie_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding_xlarge"
                android:visibility="gone" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/report_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/phone_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:padding="@dimen/padding_default"
                        android:src="@drawable/ic_phone_green_24dp" />

                    <com.varanegar.framework.util.component.PairedItemsSpinner
                        android:id="@+id/visitor_name_paired_items"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:title="@string/visitor_name_label" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/visitor_operation_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.varanegar.framework.util.component.PairedItems
                        android:id="@+id/customers_count_paired_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/customers_count" />

                    <com.varanegar.framework.util.component.PairedItems
                        android:id="@+id/visited_count_paired_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/visited_customers_label" />

                    <com.varanegar.framework.util.component.PairedItems
                        android:id="@+id/total_amount_paired_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/total_amount_label" />

                    <com.varanegar.framework.util.component.PairedItems
                        android:id="@+id/visit_count_paired_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/visited_count" />

                    <com.varanegar.framework.util.component.PairedItems
                        android:id="@+id/order_count_paired_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/ordered_count_label" />

                    <com.varanegar.framework.util.component.PairedItems
                        android:id="@+id/non_order_count_paired_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/lack_of_order_count" />

                    <com.varanegar.framework.util.component.PairedItems
                        android:id="@+id/non_visit_count_paired_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/lack_of_visit_count" />

                    <com.varanegar.framework.util.component.PairedItems
                        android:id="@+id/return_count_paired_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/return_count" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/updating_questionnaire_layout"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/updating_questionnaire_imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_update_light_blue"
                        app:layout_constraintBottom_toBottomOf="@+id/updating_questionnaire_textView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/updating_questionnaire_textView" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/updating_questionnaire_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_default"
                        android:padding="@dimen/padding_small"
                        android:text="@string/updating_questionnaire"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/updating_questionnaire_imageView"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/loading_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_large"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="@dimen/toolbarSize"
                android:layout_height="@dimen/toolbarSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_large"
                android:text="@string/downloading_data" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/error_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_large"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_error_red_900_48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_large"
                android:text="@string/downloading_data_failed" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/menu_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/padding_large"
        android:src="@drawable/ic_menu_white_24dp" />
</RelativeLayout>