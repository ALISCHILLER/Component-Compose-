<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="2">

        <TableRow>

            <TextView
                android:layout_width="210dp"
                android:layout_height="@dimen/toolbarSize"
                android:layout_margin="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="@dimen/padding_default"
                android:text="@string/activities" />

            <TextView
                android:layout_width="210dp"
                android:layout_height="@dimen/toolbarSize"
                android:layout_margin="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="@dimen/padding_default"
                android:text="@string/events" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbarSize"
                android:layout_margin="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="@dimen/padding_default"
                android:text="@string/settings" />
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/padding_default">

                <CheckBox
                    android:id="@+id/all_activites_check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_xsmall"
                    android:layout_marginRight="@dimen/padding_xsmall"
                    android:background="@color/white"
                    android:padding="@dimen/padding_default"
                    android:text="@string/all_activities" />

                <com.varanegar.framework.util.recycler.BaseRecyclerView
                    android:id="@+id/activities_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/padding_default">

                <CheckBox
                    android:id="@+id/all_events_check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_xsmall"
                    android:layout_marginRight="@dimen/padding_xsmall"
                    android:background="@color/white"
                    android:padding="@dimen/padding_default"
                    android:text="@string/all_events" />

                <com.varanegar.framework.util.recycler.BaseRecyclerView
                    android:id="@+id/events_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/padding_default">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.varanegar.framework.util.component.PairedItems
                        android:id="@+id/date_paired_items"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        app:title="@string/date" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/date_image_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_default"
                            android:src="@drawable/ic_calendar_black_24dp" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.varanegar.framework.util.component.PairedItems
                        android:id="@+id/from_time_paired_items"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        app:title="@string/from_time" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/from_time_image_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_default"
                            android:src="@drawable/ic_access_time_black_24dp" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.varanegar.framework.util.component.PairedItems
                        android:id="@+id/to_time_paired_items"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        app:title="@string/to_time" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/to_time_image_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_default"
                            android:src="@drawable/ic_access_time_black_24dp" />

                    </RelativeLayout>
                </LinearLayout>

               <LinearLayout
                   android:gravity="center_vertical"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:padding="@dimen/padding_default"
                       android:paddingBottom="@dimen/padding_xxsmall"
                       android:text="@string/wait_time" />
                   <TextView
                       android:id="@+id/wait_time_text_view"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:padding="@dimen/padding_default"
                       android:paddingBottom="@dimen/padding_xxsmall" />
               </LinearLayout>

                <SeekBar
                    android:id="@+id/wait_time_seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="360"
                    android:min="3"
                    tools:targetApi="o" />

            </LinearLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>