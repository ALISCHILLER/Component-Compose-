<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <View
        android:id="@+id/indicator"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimaryDark" />

    <LinearLayout
        android:paddingRight="@dimen/padding_xsmall"
        android:paddingLeft="@dimen/padding_xsmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ref_number_text_view"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_xxsmall" />
        <TextView
            android:id="@+id/backoffice_ref_number_text_view"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_xxsmall" />

        <TextView
            android:id="@+id/payment_type_text_view"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_xxsmall"
            android:paddingTop="@dimen/padding_xxsmall"
            android:paddingRight="@dimen/padding_xxsmall"
            android:paddingBottom="@dimen/padding_xxsmall" />
    </LinearLayout>

</LinearLayout>