<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_sub_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:padding="3dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:background="#AFAFAF" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_customerItems_dealerCode"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:gravity="center"
        android:padding="2dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#AFAFAF" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_customerItems_customerName"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:padding="2dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#AFAFAF" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_customerItems_customerCode"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:padding="2dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#AFAFAF" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_customerItems_orderWeight"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:padding="2dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#AFAFAF" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_customerItems_pendingOrderWeight"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:padding="2dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#AFAFAF" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_customerItems_inProgressOrderWeight"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:padding="2dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#AFAFAF" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_customerItems_undeliverdOrderWeight"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:padding="2dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#AFAFAF" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_customerItems_finalWeight"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:padding="2dp" />
</LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>