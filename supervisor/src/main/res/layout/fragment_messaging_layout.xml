<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light_light_light"
    android:orientation="vertical"
    android:paddingTop="80dp">

    <com.varanegar.framework.util.recycler.BaseRecyclerView
        android:id="@+id/messages_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_light_light"
        android:padding="@dimen/padding_default" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/padding_xxlarge"
        android:src="@drawable/ic_send_white_24dp"
        app:borderWidth="0dp"
        app:elevation="@dimen/elevation_default"
        app:fabSize="normal"
        app:rippleColor="?attr/colorPrimaryDark" />
</RelativeLayout>