<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_hedar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#1AEDE7"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatTextView

                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:padding="3dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="#AFAFAF" />

                <androidx.appcompat.widget.AppCompatTextView

                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:padding="3dp"
                    android:text="تاریخ"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="#AFAFAF" />

                <androidx.appcompat.widget.AppCompatTextView

                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:padding="3dp"
                    android:text="وزن سفارش"
                    app:layout_constraintStart_toEndOf="@+id/txtDate"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="#AFAFAF" />

                <androidx.appcompat.widget.AppCompatTextView

                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:padding="3dp"
                    android:text="وزن سفارش"
                    app:layout_constraintStart_toEndOf="@+id/txtorderWeight"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="#AFAFAF" />

                <androidx.appcompat.widget.AppCompatTextView

                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:padding="3dp"
                    android:text="وزن سفارش"
                    app:layout_constraintStart_toEndOf="@+id/txtpendingOrderWeight"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="#AFAFAF" />

                <androidx.appcompat.widget.AppCompatTextView

                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:padding="3dp"
                    android:text="وزن سفارش"
                    app:layout_constraintStart_toEndOf="@+id/txtinProgressOrderWeight"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="#AFAFAF"

                    />

                <androidx.appcompat.widget.AppCompatTextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:text="وزن سفارش"
                    app:layout_constraintStart_toEndOf="@+id/txtundeliverdOrderWeight"
                    app:layout_constraintTop_toTopOf="parent" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_super"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/add_item"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:padding="3dp"
                    android:text="+"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="#AFAFAF" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDate"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:padding="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#AFAFAF" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtorderWeight"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:padding="2dp"
                    app:layout_constraintStart_toEndOf="@+id/txtDate"
