<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:background="?attr/colorPrimaryLight" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="?attr/colorPrimaryLight" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.varanegar.framework.util.report.ReportHorizontalScrollView
                android:id="@+id/horizontal_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/report_recycler_header"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="?attr/colorPrimaryLight"
                        android:divider="@drawable/linear_layout_divider"
                        android:dividerPadding="@dimen/padding_linear_layout_divider"
                        android:orientation="horizontal"
                        android:showDividers="middle" />


                    <com.varanegar.framework.util.recycler.BaseRecyclerView
                        android:id="@+id/report_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />


                    <LinearLayout
                        android:id="@+id/report_recycler_footer"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:background="?attr/colorPrimaryLight"
                        android:divider="@drawable/linear_layout_divider"
                        android:dividerPadding="@dimen/padding_linear_layout_divider"
                        android:orientation="horizontal"
                        android:showDividers="middle" />
                </LinearLayout>
            </com.varanegar.framework.util.report.ReportHorizontalScrollView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:orientation="vertical"
                android:paddingLeft="1dp"
                android:paddingRight="1dp">

                <com.varanegar.framework.util.report.ReportView
                    android:id="@+id/frizzed_report_view"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/inner_footer"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="?attr/colorPrimaryLight"
                    android:orientation="horizontal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/padding_xxxlarge"
                android:background="@drawable/white_background2"
                android:elevation="@dimen/elevation_default"
                android:orientation="vertical"
                android:padding="@dimen/elevation_default"
                android:visibility="gone"
                tools:targetApi="lollipop">

                <ProgressBar
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/elevation_default"
                    android:text="@string/please_wait" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/filter_fab"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:scaleType="center"
            android:src="@drawable/ic_filter_list_black_24dp" />
        <ImageView
            android:id="@+id/sort_fab"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:scaleType="center"
            android:src="@drawable/ic_swap_vert_black_24dp"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>


