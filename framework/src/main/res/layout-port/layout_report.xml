<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/report_recycler_header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="?attr/colorPrimaryLight"
            android:divider="@drawable/linear_layout_divider"
            android:dividerPadding="@dimen/padding_linear_layout_divider"
            android:orientation="horizontal"
            android:showDividers="middle"
            android:visibility="gone" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.varanegar.framework.util.recycler.BaseRecyclerView
                android:id="@+id/report_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:visibility="gone"
                android:id="@+id/expand_footer_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/padding_small"
                android:background="?attr/colorPrimary"
                android:padding="@dimen/padding_default"
                android:src="@drawable/ic_expand_less_black_24dp"
                app:backgroundTint="?attr/colorPrimary"
                app:fabSize="mini" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/report_recycler_footer"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorPrimaryLight"
            android:divider="@drawable/linear_layout_divider"
            android:dividerPadding="@dimen/padding_linear_layout_divider"
            android:orientation="horizontal"
            android:showDividers="middle"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/filter_fab"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:scaleType="center"
                android:src="@drawable/ic_filter_list_black_24dp" />
            <ImageView
                android:id="@+id/sort_fab"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:scaleType="center"
                android:src="@drawable/ic_swap_vert_black_24dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>


