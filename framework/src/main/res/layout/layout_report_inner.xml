<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/report_recycler_header"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="?attr/colorPrimaryLight"
        android:divider="@drawable/linear_layout_divider"
        android:dividerPadding="@dimen/padding_linear_layout_divider"
        android:orientation="horizontal"
        android:showDividers="middle" />

    <com.varanegar.framework.util.recycler.BaseRecyclerViewWrapped
        android:background="@color/white"
        android:id="@+id/report_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>


