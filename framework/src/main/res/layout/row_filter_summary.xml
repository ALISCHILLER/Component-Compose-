<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="start"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/delete_image_view"
        android:padding="@dimen/padding_left_right_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear_red_900_24dp"
        android:contentDescription="@string/delete" />

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:paddingRight="@dimen/padding_left_right_default"
        android:paddingLeft="@dimen/padding_left_right_default"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center_vertical"
            android:gravity="start|center_vertical"
            android:id="@+id/field_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium" />

        <TextView
            android:layout_gravity="center_vertical"
            android:gravity="start|center_vertical"
            android:id="@+id/filter_preview_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Holo.Small" />
    </LinearLayout>

</LinearLayout>