<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/padding_small"
    app:cardCornerRadius="@dimen/padding_xsmall"
    app:cardElevation="@dimen/cardview_default_elevation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_xxsmall">

            <TextView
                android:id="@+id/row_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_small" />

            <TextView
                android:id="@+id/product_code_text_view"
                style="@android:style/TextAppearance.DeviceDefault"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_small" />

            <TextView
                android:id="@+id/product_name_text_view"
                style="@android:style/TextAppearance.DeviceDefault"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_small" />


            <TextView
                android:visibility="gone"
                android:id="@+id/product_pay_duration_text_view"
                style="@android:style/TextAppearance.DeviceDefault.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/red" />

            <ImageView
                android:id="@+id/batch_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_batch_black_24dp" />

            <ImageView
                android:id="@+id/emphasis_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:id="@+id/more_info_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/padding_default"
                android:src="@drawable/ic_more_vert_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/body_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/padding_xsmall"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_xsmall">

                    <TextView
                        android:id="@+id/price_laebl_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:padding="@dimen/padding_xxsmall"
                        android:text="@string/price_label" />

                    <TextView
                        android:id="@+id/price_text_view"
                        style="@android:style/TextAppearance.DeviceDefault.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:padding="@dimen/padding_xxsmall" />

                    <ImageView
                        android:id="@+id/prize_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_discount_red_24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_xsmall">

                    <TextView
                        android:id="@+id/store_label_text_view"
                        style="@android:style/TextAppearance.DeviceDefault.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:padding="@dimen/padding_xxsmall"
                        android:text="@string/store_inventory_label" />

                    <TextView
                        android:id="@+id/store_text_view"
                        style="@android:style/TextAppearance.DeviceDefault.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/average_factor_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_xsmall">

                    <TextView
                        android:id="@+id/average_factor_laebl_text_view"
                        style="@android:style/TextAppearance.DeviceDefault.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:padding="@dimen/padding_xxsmall"
                        android:text="@string/average_old_factor_label" />

                    <TextView
                        android:id="@+id/average_factor_text_view"
                        style="@android:style/TextAppearance.DeviceDefault.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:padding="@dimen/padding_xxsmall" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/customer_inventory_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_xsmall">

                    <TextView
                        android:id="@+id/customer_inventory_label_text_view"
                        style="@android:style/TextAppearance.DeviceDefault.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:padding="@dimen/padding_xxsmall"
                        android:text="@string/customer_inventory_label" />

                    <TextView
                        android:id="@+id/customer_inventory_text_view"
                        style="@android:style/TextAppearance.DeviceDefault.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:padding="@dimen/padding_xxsmall" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/qty_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/order_qty_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_small" />

                <TextView
                    android:id="@+id/equals_text_view"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="@dimen/padding_small"
                    android:text="=" />

                <TextView
                    android:id="@+id/total_order_qty_text_view"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="@dimen/padding_small" />

                <TextView
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="@dimen/padding_small"
                    android:text="@string/total_price" />

                <TextView
                    android:id="@+id/total_amount_text_view"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="@dimen/padding_small" />

                <LinearLayout
                    android:id="@+id/usance_day_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:padding="@dimen/padding_small"
                        android:text="@string/usance_day_pay" />

                    <TextView
                        android:id="@+id/usance_day_text_view"
                        style="@android:style/TextAppearance.DeviceDefault.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:padding="@dimen/padding_small" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

