<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.DayNight" >
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="EditText">
        <item name="android:layout_margin">@dimen/padding_large</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <style name="EditText.Inverse" parent="EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:layout_margin">@dimen/padding_default</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="CollapsingTitle">
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_margin">@dimen/padding_default</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

</resources>