<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_xsmall">

            <com.varanegar.framework.util.component.PairedItemsSpinner
                android:id="@+id/city_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleLine="true"
                app:title="@string/city_name" />

            <com.varanegar.framework.util.component.PairedItemsSpinner
                android:id="@+id/bank_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleLine="true"
                app:title="@string/bank_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.varanegar.framework.util.component.PairedItemsEditable
                    android:id="@+id/branch_number_paired_items_editable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:orientation="vertical"
                    app:singleLine="true"
                    android:maxLength="10"
                    app:title="@string/branch_number" />

                <com.varanegar.framework.util.component.PairedItemsEditable
                    android:id="@+id/branch_name_paired_items_editable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:orientation="vertical"
                    app:singleLine="true"
                    app:title="@string/branch_name" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.varanegar.framework.util.component.PairedItemsEditable
                android:id="@+id/account_name_paired_items_editable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:orientation="vertical"
                app:singleLine="true"
                app:title="@string/check_account_name" />

            <com.varanegar.framework.util.component.PairedItemsEditable
                android:id="@+id/account_number_paired_items_editable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number|phone"
                android:maxLength="24"
                android:orientation="vertical"
                app:singleLine="true"
                app:title="@string/check_account_number" />

        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.varanegar.framework.util.component.PairedItemsEditable
                    android:id="@+id/check_number_paired_items_editable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number|phone"
                    android:maxLength="20"
                    android:orientation="vertical"
                    app:singleLine="true"
                    app:title="@string/check_serial_number" />


                <com.varanegar.framework.util.component.PairedItemsEditable
                    android:id="@+id/amount_paired_items_editable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    app:isCommaSeparated="true"
                    app:title="@string/amount" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.varanegar.framework.util.component.PairedItemsEditable
                    android:id="@+id/sayad_number_paired_items_editable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number|phone"
                    android:maxLength="16"
                    app:singleLine="true"
                    app:title="@string/sayad_number" />

                <ImageView
                    android:id="@+id/sayad_number_checked_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/padding_default"
                    android:src="@drawable/ic_help_black_24dp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/check_date_paired_items"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:title="@string/check_date" />

                <ImageView
                    android:id="@+id/date_picker_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/padding_default"
                    android:src="@drawable/ic_date_range_black_24dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <com.varanegar.vaslibrary.ui.fragment.settlement.invoiceinfo.InvoicePaymentInfoLayout
        android:id="@+id/invoices_info_layout"
        android:layout_width="250dp"
        android:layout_height="match_parent" />
</LinearLayout>