<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="150dp"
    android:orientation="horizontal">

    <com.varanegar.framework.util.component.PairedItemsEditable
        android:id="@+id/amount_paired_items_editable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_default"
        android:layout_weight="1"
        android:orientation="vertical"
        app:isCommaSeparated="true"
        app:title="@string/amount" />

    <com.varanegar.vaslibrary.ui.fragment.settlement.invoiceinfo.InvoicePaymentInfoLayout
        android:id="@+id/invoices_info_layout"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />
</LinearLayout>