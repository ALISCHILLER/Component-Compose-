<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_small"
    app:cardCornerRadius="@dimen/padding_xsmall"
    app:cardElevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:background="@drawable/ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_small"
            android:paddingTop="@dimen/padding_small">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_left_right_small"
                    android:paddingRight="@dimen/padding_left_right_small">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@android:style/TextAppearance.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_left_right_small"
                            android:text="@string/customer_name_label"
                            android:textColor="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/customer_name_text_view"
                            style="@android:style/TextAppearance.DeviceDefault"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:padding="@dimen/padding_left_right_small"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@android:style/TextAppearance.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_left_right_small"
                            android:text="@string/customer_store_name"
                            android:textColor="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/store_name_text_view"
                            style="@android:style/TextAppearance.DeviceDefault"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:padding="@dimen/padding_left_right_small"
                            android:singleLine="true" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_left_right_small"
                    android:paddingRight="@dimen/padding_left_right_small">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@android:style/TextAppearance.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_left_right_small"
                            android:text="@string/customer_tel"
                            android:textColor="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/customer_tel_text_view"
                            style="@android:style/TextAppearance.DeviceDefault"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_left_right_small" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@android:style/TextAppearance.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_left_right_small"
                            android:text="@string/customer_code"
                            android:textColor="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/customer_code_text_view"
                            style="@android:style/TextAppearance.DeviceDefault"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_left_right_small" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_left_right_small"
                    android:paddingRight="@dimen/padding_left_right_small">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@android:style/TextAppearance.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_left_right_small"
                            android:text="@string/customer_mobile"
                            android:textColor="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/customer_mobile_text_view"
                            style="@android:style/TextAppearance.DeviceDefault"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_left_right_small" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@android:style/TextAppearance.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_left_right_small"
                            android:text="@string/customer_total_order"
                            android:textColor="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/customer_total_order_text_view"
                            style="@android:style/TextAppearance.DeviceDefault"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_left_right_small" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/call_image_view"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:padding="@dimen/padding_small"
                android:src="@drawable/ic_call_green_900_24dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/customer_status_text_view"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:padding="2px"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                style="@android:style/TextAppearance.Small"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/padding_xsmall"
                android:layout_marginRight="@dimen/padding_xsmall"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_left_right_small"
                android:text="@string/customer_address_label"
                android:textColor="?attr/colorPrimary" />

            <TextView
                android:id="@+id/customer_address_text_view"
                style="@android:style/TextAppearance.DeviceDefault"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_left_right_small" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
