<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical">

    <com.varanegar.framework.util.component.SimpleToolbar
        android:id="@+id/simple_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarSize"
        app:title="@string/send_tour" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@color/white2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white3"
                android:padding="@dimen/padding_xsmall">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : " />

                <TextView
                    android:id="@+id/user_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white3"
                android:padding="@dimen/padding_xsmall">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/local_server_ip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : " />

                <TextView
                    android:id="@+id/local_ip_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white3"
                android:padding="@dimen/padding_xsmall">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/internet_ip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : " />

                <TextView
                    android:id="@+id/ip_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />
            </LinearLayout>

            <include layout="@layout/horizontal_line" />

            <TextView
                android:id="@+id/status_text_view"
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:lineSpacingExtra="@dimen/padding_small"
                android:padding="@dimen/padding_default"
                android:scrollbars="vertical"
                android:shadowColor="@color/white"
                android:shadowRadius="1"
                android:textColor="@color/black" />

            <include layout="@layout/horizontal_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white3"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/cancel_tour"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/padding_default"
                    android:background="@drawable/btn_background"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_cancel_red_900_48dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stop"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/send_tour"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/padding_default"
                    android:background="@drawable/btn_background"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_cloud_upload_white_48dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/send"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/padding_default">

            <LinearLayout
                android:id="@+id/tour_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_default">

                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/tour_no_paired_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleLine="true"
                    app:title="@string/tour_no" />

                <!--dist-->
                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/total_deliveries_customer_paired_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleLine="true"
                    app:title="@string/delivered" />
                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/total_partial_deliveries_customer_paired_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleLine="true"
                    app:title="@string/delivered_partially" />
                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/total_lack_of_deliveries_customer_paired_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleLine="true"
                    app:title="@string/lack_of_delivery_count" />
                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/total_lack_of_visits_customer_paired_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleLine="true"
                    app:title="@string/lack_of_visit_count" />
                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/total_return_customer_paired_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleLine="true"
                    app:title="@string/return_count" />
                <!--end dist-->

                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/today_customers_count_paired_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleLine="true"
                    app:title="@string/today_customers_count" />

                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/total_customers_count_paired_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleLine="true"
                    app:title="@string/total_customers_count" />

                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/today_sum_of_ordered_paired_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleLine="true"
                    app:title="@string/today_sum_of_ordered" />

                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/total_sum_of_ordered_paired_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleLine="true"
                    app:title="@string/total_sum_of_ordered" />

                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/today_visited_customer_paired_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleLine="true"
                    app:title="@string/today_visited" />

                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/total_visited_customer_paired_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleLine="true"
                    app:title="@string/total_visited" />

                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/today_ordered_customer_paired_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleLine="true"
                    app:title="@string/today_ordered" />

                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/total_ordered_customer_paired_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleLine="true"
                    app:title="@string/total_ordered" />

                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/lack_of_visit_customer_paired_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleLine="true"
                    app:title="@string/today_lack_of_visit" />

                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/today_lack_of_order_customer_paired_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleLine="true"
                    app:title="@string/today_lack_of_order" />

                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/total_lack_of_order_customer_paired_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleLine="true"
                    app:title="@string/total_lack_of_order" />

                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/visit_to_customer_paired_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleLine="true"
                    app:title="@string/visit_to_customer" />

                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/spd_paired_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleLine="true"
                    app:title="@string/spd" />

                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/total_visit_time_paired_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleLine="true"
                    app:title="@string/total_visit_time" />

                <com.varanegar.framework.util.component.PairedItems
                    android:id="@+id/tour_time_paired_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleLine="true"
                    app:title="@string/total_tour_time" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>