<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimaryLight"
    android:orientation="horizontal"
    android:padding="@dimen/padding_default">

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/padding_small"
        android:text="@string/row_number"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/padding_small"
        android:text="@string/product_code"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="@dimen/padding_small"
        android:text="@string/product_name"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textAlignment="center"
        android:padding="@dimen/padding_small"
        android:text="@string/unit_price"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="@dimen/padding_small"
        android:text="@string/order_qty"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/total_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/padding_small"
        android:text="@string/total_order_qty"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/item_value_column_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/padding_small"
        android:text="@string/value"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/icon_image_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:gravity="center" />
</LinearLayout>
