<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cover_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <View
        android:id="@+id/landscape_view"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:visibility="visible" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_light_light_transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white3"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_default"
                android:paddingTop="@dimen/padding_small"
                android:paddingRight="@dimen/padding_default"
                android:paddingBottom="@dimen/padding_small">

                <TextView
                    android:id="@+id/product_name_text_view"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:singleLine="true"
                    android:textColor="@color/grey_dark_dark" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_small"
                        android:paddingRight="@dimen/padding_small">

                        <TextView
                            style="@android:style/TextAppearance.DeviceDefault.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_xsmall"
                            android:text="@string/product_code"
                            android:textColor="@color/grey_dark_dark" />

                        <TextView
                            android:id="@+id/code_text_view"
                            style="@android:style/TextAppearance.DeviceDefault.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_xsmall"
                            android:textColor="@color/grey_dark_dark" />

                        <ImageView
                            android:id="@+id/prize_comment_icon"
                            app:tint="@color/green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_prize" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/unit_text_view"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small"
                    android:textColor="@color/grey_dark_dark" />

                <LinearLayout
                    android:id="@+id/order_info_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/padding_small"
                            android:paddingRight="@dimen/padding_small">

                            <TextView
                                style="@android:style/TextAppearance.DeviceDefault.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_xsmall"
                                android:text="@string/unit_price"
                                android:textColor="@color/grey_dark_dark" />

                            <TextView
                                android:id="@+id/price_text_view"
                                style="@android:style/TextAppearance.DeviceDefault.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_xsmall"
                                android:textColor="@color/grey_dark_dark" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/padding_small"
                            android:paddingRight="@dimen/padding_small">

                            <TextView
                                android:id="@+id/large_unit_price_label"
                                style="@android:style/TextAppearance.DeviceDefault.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_xsmall"
                                android:textColor="@color/grey_dark_dark" />

                            <TextView
                                android:id="@+id/large_unit_price"
                                style="@android:style/TextAppearance.DeviceDefault.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_xsmall"
                                android:textColor="@color/grey_dark_dark" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_small"
                        android:paddingRight="@dimen/padding_small">

                        <TextView
                            android:id="@+id/user_price_label"
                            style="@android:style/TextAppearance.DeviceDefault.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_xsmall"
                            android:textColor="@color/grey_dark_dark" />

                        <TextView
                            android:id="@+id/user_price"
                            style="@android:style/TextAppearance.DeviceDefault.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_xsmall"
                            android:textColor="@color/grey_dark_dark" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/stock_level_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/padding_small"
                            android:paddingRight="@dimen/padding_small">

                            <TextView
                                android:id="@+id/stock_level_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_xsmall"
                                android:text="@string/stock_level"
                                android:textColor="@color/grey_dark_dark" />

                            <TextView
                                android:id="@+id/stock_level_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_xsmall"
                                android:textColor="@color/grey_dark_dark" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/padding_small"
                            android:paddingRight="@dimen/padding_small">

                            <TextView
                                style="@android:style/TextAppearance.DeviceDefault.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_xsmall"
                                android:text="@string/request_qty"
                                android:textColor="@color/grey_dark_dark" />

                            <TextView
                                android:id="@+id/qty_text_view"
                                style="@android:style/TextAppearance.DeviceDefault.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_xsmall"
                                android:textColor="@color/grey_dark_dark" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>