    <LinearLayout
                android:id="@+id/layout_super"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/add_item"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:padding="3dp"
                    android:textSize="20sp"
                    android:text="+"
                    android:textStyle="bold"
                    android:textColor="#4DFF56"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#AFAFAF" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDate"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:padding="2dp"
                    android:textColor="#975B12"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#AFAFAF" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtorderWeight"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:padding="2dp"
                    android:textColor="#975B12"
                    app:layout_constraintStart_toEndOf="@+id/txtDate"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#AFAFAF" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtpendingOrderWeight"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:padding="2dp"
                    android:textColor="#975B12"
                    app:layout_constraintStart_toEndOf="@+id/txtorderWeight"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#AFAFAF" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtinProgressOrderWeight"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:padding="2dp"
                    android:textColor="#975B12"
                    app:layout_constraintStart_toEndOf="@+id/txtpendingOrderWeight"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#AFAFAF" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtundeliverdOrderWeight"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:padding="2dp"
                    android:textColor="#975B12"
                    app:layout_constraintStart_toEndOf="@+id/txtinProgressOrderWeight"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#AFAFAF" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/finalWeight"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:textColor="#975B12"
                    app:layout_constraintStart_toEndOf="@+id/txtundeliverdOrderWeight"
                    app:layout_constraintTop_toTopOf="parent" />


            </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_footer_order"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/color_list_footer"
        >

        <androidx.appcompat.widget.AppCompatTextView

            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:padding="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#AFAFAF" />

        <androidx.appcompat.widget.AppCompatTextView

            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:padding="3dp"
            android:text=" جمع کل"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#AFAFAF" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_sum_orderWeight"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:padding="3dp"

            app:layout_constraintStart_toEndOf="@+id/txtDate"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#AFAFAF" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_sum_pendingOrderWeight"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:padding="3dp"

            app:layout_constraintStart_toEndOf="@+id/txtorderWeight"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#AFAFAF" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_sum_inProgressOrderWeight"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:padding="3dp"

            app:layout_constraintStart_toEndOf="@+id/txtpendingOrderWeight"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#AFAFAF" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_sum_undeliverdOrderWeight"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:padding="3dp"

            app:layout_constraintStart_toEndOf="@+id/txtinProgressOrderWeight"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#AFAFAF"

            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_sum_finalWeight"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:padding="3dp"
            app:layout_constraintStart_toEndOf="@+id/txtundeliverdOrderWeight"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_header_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/color_list_hedear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_super">



        <androidx.appcompat.widget.AppCompatTextView

            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:padding="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#AFAFAF" />



        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:padding="2dp"
            android:text="کد مشتری"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/txt_dealersItems_data"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#AFAFAF" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:gravity="center"
            android:padding="2dp"
            android:text="نام مشتری"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/txt_dealersname_data"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#AFAFAF" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:padding="2dp"
            android:text="کل سفارش"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/txt_dealerCode_data"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#AFAFAF" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:padding="2dp"
            android:text="سفارشات بدون وضعیت"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/txt_orderWeight"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#AFAFAF" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:padding="2dp"
            android:text="سفارش ستل نشده"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/txt_pendingOrderWeight"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#AFAFAF" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:padding="2dp"
            android:text="سفارشات برگشتی"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/txt_inProgressOrderWeight"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#AFAFAF" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:padding="2dp"
            android:text="سفارشات فاکتور شده"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/txt_inProgressOrderWeight"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

<!--        </androidx.appcompat.widget.LinearLayoutCompat>-->
<!--    </HorizontalScrollView>-->
</androidx.appcompat.widget.LinearLayoutCompat>