<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarSize"
        android:elevation="@dimen/elevation_default"
        tools:targetApi="lollipop">

        <TextView
            android:layout_width="180dp"
            android:layout_height="@dimen/toolbarSize"
            android:background="?attr/colorPrimaryLight"
            android:padding="@dimen/padding_default"
            android:text="@string/orders_list"
            android:textColor="@color/white" />

        <include layout="@layout/vertical_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbarSize"
            android:background="?attr/colorPrimaryLight"
            android:padding="@dimen/padding_default"
            android:text="@string/order_details"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="1dp"
            android:paddingRight="1dp">


            <com.varanegar.framework.util.recycler.BaseRecyclerView
                android:id="@+id/master_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <include layout="@layout/vertical_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="1dp"
            android:paddingRight="1dp">


            <LinearLayout
                android:id="@+id/detail_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.varanegar.framework.util.component.PairedItems
                        android:id="@+id/order_type_name_paired_items"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:title="@string/order_type_name" />

                    <com.varanegar.framework.util.component.PairedItems
                        android:id="@+id/payment_type_paired_items"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:title="@string/payment_type" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.varanegar.framework.util.component.PairedItems
                        android:id="@+id/start_time_paired_items"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:title="@string/start_time" />

                    <com.varanegar.framework.util.component.PairedItems
                        android:id="@+id/end_time_paired_items"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:title="@string/end_time" />
                </LinearLayout>

                <com.varanegar.framework.util.report.ReportView
                    android:id="@+id/items_report_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_xxsmall" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>