<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/elevation_default"
            android:orientation="horizontal"
            android:padding="@dimen/padding_default"
            tools:targetApi="lollipop">

            <ImageView
                android:id="@+id/pin_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/padding_default"
                android:src="@drawable/ic_pin_red_24dp" />

            <TextView
                android:id="@+id/subject_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding_default" />

            <ImageView
                android:id="@+id/image_gallery_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/padding_default"
                android:src="@drawable/ic_no_image_grey_24dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/white_shadow_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/main_layout"
        android:layout_alignTop="@id/main_layout"
        android:foreground="@color/white4" />

</RelativeLayout>