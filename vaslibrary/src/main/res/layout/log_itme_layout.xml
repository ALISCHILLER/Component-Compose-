<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal">

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:layout_gravity="center_vertical"
        android:id="@+id/download_progress_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="@dimen/padding_small"
        android:layout_marginLeft="@dimen/padding_small"
        app:cpb_background_progressbar_color="?attr/colorPrimaryLight"
        app:cpb_background_progressbar_width="5dp"
        app:cpb_progressbar_color="?attr/colorPrimaryDark" />

    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/result_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_small"
        android:visibility="gone" />

    <TextView
        android:id="@+id/percent_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/padding_small"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/log_group_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/padding_small"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textColor="@color/white" />
</LinearLayout>