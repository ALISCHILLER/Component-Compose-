<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.varanegar.framework.util.component.SimpleToolbar
        android:id="@+id/toolbar"
        local:title="@string/payment_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.varanegar.framework.util.component.PairedItemsSpinner
            android:id="@+id/dealer_name_spinner"
            local:title="@string/dealer_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.varanegar.framework.util.report.ReportView
            android:id="@+id/payment_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>