<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.varanegar.framework.util.component.SimpleToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarSize"
        app:title="@string/user_profile" />

    <com.varanegar.framework.util.component.PairedItems
        android:id="@+id/user_name_paired_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:title="@string/user_name" />

    <com.varanegar.framework.util.component.PairedItems
        android:id="@+id/login_date_paired_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:title="@string/login_date" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/padding_large"
        android:background="@color/grey_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_marginTop="@dimen/padding_large"
        android:background="@color/grey_light_light_light"
        android:orientation="vertical"
        android:padding="@dimen/padding_default">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_default">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_password" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="vertical">

            <com.varanegar.framework.util.component.PairedItemsEditable
                android:id="@+id/old_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                app:title="@string/old_password" />

            <com.varanegar.framework.util.component.PairedItemsEditable
                android:id="@+id/pass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                app:title="@string/new_password" />

            <com.varanegar.framework.util.component.PairedItemsEditable
                android:id="@+id/pass2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                app:title="@string/confirm_password" />

            <com.dd.processbutton.iml.SubmitProcessButton
                android:id="@+id/submit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_default"
                android:text="@string/submit"
                android:textColor="@color/white"
                custom:pb_colorError="@color/red"
                custom:pb_colorNormal="@color/transparent"
                custom:pb_colorProgress="?attr/colorPrimary"
                custom:pb_textProgress="@string/please_wait" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_default"
            android:background="?attr/colorPrimary"
            android:padding="@dimen/padding_default"
            android:text="@string/reset_user_settings"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/change_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_default"
            android:background="?attr/colorPrimary"
            android:padding="@dimen/padding_default"
            android:text="@string/app_language"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>