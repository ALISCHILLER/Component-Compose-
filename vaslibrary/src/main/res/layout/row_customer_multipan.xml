<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewCustomerStatus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardBackgroundColor="@color/red_error"
        android:layout_margin="@dimen/padding_small"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewZarShop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardBackgroundColor="@color/zarShop"
        android:layout_margin="@dimen/padding_small"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="7dp"
        android:layout_marginTop="@dimen/padding_small"
        android:layout_marginBottom="@dimen/padding_small"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardElevation="@dimen/cardview_default_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_small">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/padding_left_right_small"
                        android:paddingRight="@dimen/padding_left_right_small">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@android:style/TextAppearance.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_left_right_small"
                                android:text="@string/customer_name_label"
                                android:textColor="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/customer_name_text_view"
                                style="@android:style/TextAppearance.DeviceDefault"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:padding="@dimen/padding_left_right_small"
                                android:singleLine="true" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RatingBar
                                android:id="@+id/simpleRatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="3"
                                android:visibility="gone"
                                android:theme="@style/RatingBar"
                                android:isIndicator="true"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@android:style/TextAppearance.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_left_right_small"
                                android:text="@string/customer_store_name"
                                android:textColor="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/store_name_text_view"
                                style="@android:style/TextAppearance.DeviceDefault"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:padding="@dimen/padding_left_right_small"
                                android:singleLine="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@android:style/TextAppearance.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_left_right_small"
                                android:text="@string/customer_mobile"
                                android:textColor="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/customer_mobile_text_view"
                                style="@android:style/TextAppearance.DeviceDefault"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_left_right_small" />
                        </LinearLayout>

                        <!--   customer level     -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@android:style/TextAppearance.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_left_right_small"
                                android:text="@string/customer_level"
                                android:textColor="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/customer_level_text_view"
                                style="@android:style/TextAppearance.DeviceDefault"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:padding="@dimen/padding_left_right_small"
                                android:singleLine="true" />

                        </LinearLayout>
                        <!--   customer level     -->



                        <LinearLayout
                            android:id="@+id/codenaghsh_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/codenaghsh_text"
                                style="@android:style/TextAppearance.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/padding_xsmall"
                                android:layout_marginRight="@dimen/padding_xsmall"
                                android:gravity="center_vertical"
                                android:padding="@dimen/padding_left_right_small"
                                android:text="@string/code_naghsh"
                                android:textColor="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/codenaghsh_text_view"
                                style="@android:style/TextAppearance.DeviceDefault"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:padding="@dimen/padding_left_right_small" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/padding_left_right_small"
                        android:paddingRight="@dimen/padding_left_right_small">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@android:style/TextAppearance.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_left_right_small"
                                android:text="@string/customer_tel"
                                android:textColor="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/customer_tel_text_view"
                                style="@android:style/TextAppearance.DeviceDefault"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_left_right_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@android:style/TextAppearance.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_left_right_small"
                                android:text="@string/customer_code"
                                android:textColor="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/customer_code_text_view"
                                style="@android:style/TextAppearance.DeviceDefault"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_left_right_small" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@android:style/TextAppearance.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_left_right_small"
                                android:text="@string/customer_total_order"
                                android:textColor="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/customer_total_order_text_view"
                                style="@android:style/TextAppearance.DeviceDefault"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_left_right_small" />
                        </LinearLayout>

                        <!--   customer Group     -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@android:style/TextAppearance.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_left_right_small"
                                android:text="@string/customer_group_lable"
                                android:textColor="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/customer_group_text_view"
                                style="@android:style/TextAppearance.DeviceDefault"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:padding="@dimen/padding_left_right_small"
                                android:singleLine="true" />

                        </LinearLayout>
                        <!--   customer Group     -->

                        <!--   customer activity     -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@android:style/TextAppearance.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_left_right_small"
                                android:text="@string/customer_activity"
                                android:textColor="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/customer_activity_text_view"
                                style="@android:style/TextAppearance.DeviceDefault"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:padding="@dimen/padding_left_right_small"
                                android:singleLine="true" />

                        </LinearLayout>
                        <!--   customer activity     -->


                    </LinearLayout>

                    <!--<LinearLayout-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:orientation="vertical"-->
                    <!--android:paddingLeft="@dimen/padding_left_right_small"-->
                    <!--android:paddingRight="@dimen/padding_left_right_small">-->


                    <!---->

                    <!---->
                    <!--</LinearLayout>-->


                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageViewZarShop"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_gravity="bottom"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/zar_logo"
                        android:layout_marginEnd="2dp" />


                    <ImageView
                        android:id="@+id/call_image_view"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:padding="@dimen/padding_small"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/ic_call_green_900_24dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/description_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="@dimen/padding_xsmall"
                    android:layout_marginRight="@dimen/padding_xsmall"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding_left_right_small"
                    android:text="@string/order_description"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/order_description_text_view"
                    style="@android:style/TextAppearance.DeviceDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding_left_right_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/customer_status_text_view"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:padding="2px"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="@dimen/padding_xsmall"
                    android:layout_marginRight="@dimen/padding_xsmall"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding_left_right_small"
                    android:text="@string/customer_address_label"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/customer_address_text_view"
                    style="@android:style/TextAppearance.DeviceDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding_left_right_small" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>



