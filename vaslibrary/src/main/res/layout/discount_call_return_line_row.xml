<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        style="@style/TextAppearance.AppCompat.Small"
        android:padding="@dimen/padding_xxsmall"
        android:gravity="center"
        android:layout_weight="2"
        android:id="@+id/product_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/TextAppearance.AppCompat.Small"
        android:padding="@dimen/padding_xxsmall"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/invoice_ref_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:layout_weight="1"
        android:layout_margin="@dimen/padding_xxsmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            style="@style/TextAppearance.AppCompat.Small"
            android:id="@+id/healthy_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/healthy" />

        <RadioButton
            style="@style/TextAppearance.AppCompat.Small"
            android:id="@+id/waste_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/waste" />
    </RadioGroup>
</LinearLayout>