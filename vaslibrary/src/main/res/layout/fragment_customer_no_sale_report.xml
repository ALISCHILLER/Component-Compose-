<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.varanegar.framework.util.component.SimpleToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbarSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.varanegar.vaslibrary.util.multispinnerfilter.MultiSpinnerSearch
                android:id="@+id/multipleItemSelectionSpinnerr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:highlightColor="@color/orange"
                app:hintText="لیست کالا ها"
                app:textColor="@color/blue_pressed" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/start_date_picker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.varanegar.framework.util.component.PairedItems
                            android:id="@+id/start_date_item"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            app:title="@string/start_date" />

                        <ImageView
                            android:id="@+id/start_calendar_image_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/padding_default"
                            android:layout_marginRight="@dimen/padding_default"
                            android:padding="@dimen/padding_default"
                            android:src="@drawable/ic_date_range_black_24dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/end_date_picker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.varanegar.framework.util.component.PairedItems
                            android:id="@+id/end_date_item"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            app:title="@string/end_date" />

                        <ImageView
                            android:id="@+id/end_calendar_image_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/padding_default"
                            android:layout_marginRight="@dimen/padding_default"
                            android:padding="@dimen/padding_default"
                            android:src="@drawable/ic_date_range_black_24dp" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/buttonReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/padding_default"
                    android:layout_marginRight="@dimen/padding_default"
                    android:padding="@dimen/padding_default"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="@string/createReport"
                    android:background="@drawable/btn_background"/>

            </LinearLayout>

        </LinearLayout>

        <com.varanegar.framework.util.report.ReportView
            android:id="@+id/review_report_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_3sdp"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>