<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/large_unit_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/plus_image_view_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:src="@drawable/ic_plus_square_green_36dp"
            android:tint="@color/green" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layoutDirection="ltr"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/qty_text_view_large"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/calculator_left_green_corner"
                android:gravity="center"
                android:minWidth="20dp"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/unit_text_view_large"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/calculator_right_green_corner"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:minWidth="40dp"
                android:textSize="@dimen/calculator_text_size_small" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/minus_image_view_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:src="@drawable/ic_minus_square_red_36dp"
            android:tint="@color/red" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>