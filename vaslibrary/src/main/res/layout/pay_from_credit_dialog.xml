<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.varanegar.framework.util.component.PairedItems
            android:id="@+id/customer_remaining_paired_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/customer_remaining" />

        <com.varanegar.framework.util.component.PairedItemsEditable
            android:id="@+id/amount_paired_items_editable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isCommaSeparated="true"
            app:title="@string/amount" />
    </LinearLayout>

    <com.varanegar.vaslibrary.ui.fragment.settlement.invoiceinfo.InvoicePaymentInfoLayout
        android:id="@+id/invoices_info_layout"
        android:layout_width="300dp"
        android:layout_height="match_parent" />
</LinearLayout>