<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/catalog_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:adjustViewBounds="true"
        android:background="@color/grey_light_light"
        android:contentDescription="@string/catalog_image"
        android:minHeight="150dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/catalog_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white4"
        android:gravity="center"
        android:padding="@dimen/padding_small"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size" />

    <include
        layout="@layout/vertical_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>